{
  "entrypoint": "index.html",
  "shell": "src/edr-app.html",
  "fragments": [
    "src/edr-interactions.html",
    "src/edr-sightings.html",
    "src/edr-outlaws.html",
    "src/edr-view404.html",
    "src/edr-login.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
